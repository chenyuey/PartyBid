header#signuprefresh 报名{{'('+messages.length+'人)'}}
    div.header-left
        button.btn.btn-primary.btn-lg(ng-click="btnReturn()") 返回
    div.header-right(ng-switch="apply_status")
        button(ng-switch-when="2" ng-disabled="true") 开始
        button.btn.btn-primary.btn-lg(ng-switch-when="0" ng-click="btnStart()") 开始
        button.btn.btn-primary.btn-lg(ng-switch-when="1" ng-click="btnEnd()") 结束

 div.wrapper
     table.table.table-striped(ng-repeat="message in messages")
         tr.col-sm-5.col-md-6
             td(width="160px") {{message.name}}
             td {{message.phone}}

